<h1>New Product</h1>

<%= form_for @product do |f| %>

  <%= f.label "Name" %><br>
  <%= f.text_field :name %><br>
  <br>

  <%= f.label "Description" %><br>
  <%= f.text_area :description %><br>
  <br>

  <%= f.label "Price" %><br>
  <%= f.text_field :price_in_cents %><br>
  <br>
  
  <%= f.submit %>

<% end %>
